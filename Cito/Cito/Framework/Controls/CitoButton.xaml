<?xml version="1.0" encoding="UTF-8"?>
<Button xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Cito.Framework.Controls.CitoButton"
        BackgroundColor="{StaticResource CitoMain}"
        TextColor="{StaticResource CitoBackground}"
        FontFamily="Lato"
        FontSize="15"
        BorderColor="{StaticResource CitoAccent}"
        BorderWidth="1.5"
        BorderRadius="10">
  <Button.HeightRequest>
      <OnPlatform x:TypeArguments="x:Double" iOS="45" Android="45" />
  </Button.HeightRequest>
</Button>

