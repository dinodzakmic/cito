<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Cito.Framework.Controls;assembly=Cito"
             x:Class="Cito.FirstPage">

  <StackLayout Padding="20, 40" Spacing="10">
      <Image Source="{StaticResource LogoImage}" Aspect="AspectFit" />
      <StackLayout HeightRequest="40" />

      <controls:CitoButton Text="SIGN IN WITH FACEBOOK" Image="{StaticResource FacebookIcon}" Margin="15,0" />
      <controls:CitoButton Text="SIGN IN WITH GOOGLE" Image="{StaticResource GoogleIcon}" Margin="15,0"/>

      <controls:CitoLabel Text="OR" FontAttributes="Bold" FontSize="15"
                          TextColor="{StaticResource CitoMainPurple}"
                          HorizontalTextAlignment="Center" Margin="0,10" />

      <controls:CitoButton Text="CREATE ACCOUNT" Margin="15,0" />
      <controls:CitoButton Text="SIGN IN" Margin="15,0" Clicked="Button_OnClicked"/>
  </StackLayout>
  
</ContentPage>